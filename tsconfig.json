{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "noEmit": true,
      "allowJs": true,
      "outDir": "dist",
      "baseUrl": "./",
      "strict": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "importsNotUsedAsValues": "preserve",
      "preserveConstEnums": true,
      "incremental": true,
      "types": [
        "node"
      ]
    },
    "exclude": [
      "./node_modules",
      "./dist",
      "./webpack",
      "**/*.test.js",
      "**/*.test.jsx",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }
  